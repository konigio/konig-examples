<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.konig.examples</groupId>
  <artifactId>rdbms-shape</artifactId>
  <version>1.0.0</version>
  <name>RDBMS Shape</name>
  
  <properties>
    <maven.compiler.target>1.7</maven.compiler.target>
    <maven.compiler.source>1.7</maven.compiler.source>
  	<konig.version>2.0.0-8-SNAPSHOT</konig.version>
  </properties>
  
  <build>
  	<sourceDirectory>${basedir}/target/generated/src/main/java</sourceDirectory>
  	<plugins>
  		<plugin>
	  		<groupId>io.konig</groupId>
	  		<artifactId>konig-google-download-maven-plugin</artifactId>
	  		<version>${konig.version}</version>
	  		<configuration>
	  			<documentId>1hrEtWSATcwVWrRHH1oXAqV6xB0gWwZaC5iK98Lho6Gc</documentId>
	  			<saveAs>${basedir}/target/generated/data-model.xlsx</saveAs>
	  		</configuration>
				<executions>
	  			<execution>
		  			<phase>generate-sources</phase>
		  			<goals>
		  				<goal>download</goal>
		  			</goals>
	  			</execution>
	  		</executions>	  		
	  	</plugin>
  		<plugin>
	  		<groupId>io.konig</groupId>
	  		<artifactId>konig-schemagen-maven-plugin</artifactId>
	  		<version>${konig.version}</version>
	  		<configuration>
	  			<defaults>
	  				<rootDir>${basedir}/target/generated</rootDir>
	  			</defaults>
	  			<workbook>
		  			<workbookFile>${basedir}/target/generated/data-model.xlsx</workbookFile>
		  			<failOnErrors>true</failOnErrors>
	  			</workbook>
	  			<amazonWebServices>
	  				<aurora>
	  					<shapeIriPattern>(.*)Shape$</shapeIriPattern>
	  					<shapeIriReplacement>$1RdbmsShape</shapeIriReplacement>
	  					<propertyNameSpace>http://example.com/ns/alias/</propertyNameSpace>
	  				</aurora>
	  			</amazonWebServices>	
	  		</configuration>
	  		<executions>
	  			<execution>
		  			<phase>generate-sources</phase>
		  			<goals>
		  				<goal>generate</goal>
		  			</goals>
	  			</execution>
	  		</executions>
  		</plugin>
 		
 			<plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.3</version>
        <configuration>
          <descriptor>src/assembly/dep.xml</descriptor>
        </configuration>
        <executions>
          <execution>
            <id>create-archive</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>  	
  		
  	</plugins>
  </build>
</project>